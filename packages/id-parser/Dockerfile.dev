# Development Dockerfile
# Optimized for hot reloading and development experience

FROM python:3.10-slim

# Install system dependencies
RUN apt-get update && apt-get install -y \
    libglib2.0-0 libgl1 libsm6 libxrender1 libxext6 \
    && apt-get clean \
    && rm -rf /var/lib/apt/lists/*

# Install UV via pip
RUN pip install --no-cache-dir uv

WORKDIR /app

# Copy dependency files first (for better layer caching)
COPY pyproject.toml uv.lock* ./

# Install all dependencies (including dev dependencies for debugging)
RUN uv sync --frozen

# Install PaddlePaddle CPU separately (special index)
RUN uv pip install paddlepaddle==3.2.0 -i https://www.paddlepaddle.org.cn/packages/stable/cpu/

# Note: Application code will be mounted as volume in docker-compose
# This allows hot reloading without rebuilding the image

EXPOSE 8000

# Development: with reload flag for hot module reloading
# --reload-exclude excludes patterns that shouldn't trigger reloads
CMD ["uv", "run", "uvicorn", "main:app", "--host", "0.0.0.0", "--port", "8000", "--reload", "--reload-exclude", "*.pyc", "--reload-exclude", "__pycache__"]
