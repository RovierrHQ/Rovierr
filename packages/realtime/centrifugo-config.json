{
  "client": {
    "token": {
      "hmac_secret_key": "${CENTRIFUGO_HMAC_SECRET_KEY}"
    },
    "allowed_origins": ["PLACEHOLDER_WILL_BE_REPLACED"]
  },
  "http_api": {
    "key": "${CENTRIFUGO_API_KEY}"
  },
  "admin": {
    "enabled": true,
    "password": "${CENTRIFUGO_ADMIN_PASSWORD}",
    "secret": "${CENTRIFUGO_ADMIN_SECRET}"
  },
  "channel": {
    "namespaces": [
      {
        "name": "chat",
        "presence": true,
        "join_leave": true,
        "history_size": 10,
        "history_ttl": "300s",
        "force_positioning": true,
        "force_recovery": true,
        "allow_subscribe_for_client": true,
        "allow_user_limited_channels": true
      },
      {
        "name": "conversation",
        "presence": true,
        "join_leave": true,
        "history_size": 100,
        "history_ttl": "3600s",
        "force_positioning": true,
        "force_recovery": true,
        "allow_subscribe_for_client": true
      }
    ]
  }
}
