{
  "extends": "../typescript-config/react-library.json",
  "compilerOptions": {
    "rootDir": "src",
    "outDir": "dist",
    "composite": true,
    "jsx": "react-jsx",
    "baseUrl": ".",
    "paths": {
      "@/*": ["./src/*"],
      "@rov/ui/lib/*": ["./src/lib/*"],
      "@rov/ui/components/*": ["./src/components/*"],
      "@rov/ui/hooks/*": ["./src/hooks/*"]
    }
  },
  "include": ["src/**/*.ts", "src/**/*.tsx"],
  "exclude": ["node_modules", "dist"]
}
