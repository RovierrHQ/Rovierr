{
  "name": "rovierr",
  "private": true,
  "workspaces": [
    "apps/*",
    "packages/*"
  ],
  "scripts": {
    "check": "biome check --write .",
    "ruler:apply": "pnpm dlx @intellectronica/ruler@latest apply --local-only",
    "dev": "turbo dev",
    "build": "turbo build",
    "check-types": "turbo check-types",
    "db:push": "turbo -F server db:push",
    "db:studio": "turbo -F server db:studio",
    "db:generate": "turbo -F server db:generate",
    "db:migrate": "turbo -F server db:migrate",
    "doc": "cd apps/docs && mintlify dev --port 3333",
    "cl-install": "find . -name 'node_modules' -type d -prune -exec rm -rf {} + && find . -name 'pnpm-lock.yaml' -type f -delete && pnpm install"
  },
  "devDependencies": {
    "@biomejs/biome": "2.1.2",
    "husky": "9.1.7",
    "lint-staged": "^16.1.6",
    "turbo": "2.5.8",
    "ultracite": "5.1.2"
  },
  "lint-staged": {
    "*.{js,jsx,ts,tsx,json,jsonc,css,scss,md,mdx}": [
      "npx ultracite format"
    ]
  },
  "packageManager": "pnpm@10.17.1"
}
